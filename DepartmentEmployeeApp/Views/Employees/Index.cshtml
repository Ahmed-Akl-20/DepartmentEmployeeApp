@model IEnumerable<DepartmentEmployeeApp.Models.Employee>

@{
    ViewData["Title"] = "Employees";
}

<h2 class="mb-3">Employees</h2>

<a asp-action="Create" class="btn btn-dark mb-3">Add New Employee</a>

<table class="table table-bordered table-hover">
    <thead class="table-dark text-center">
        <tr>
            <th>#</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Department</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody class="text-center">
        @foreach (var emp in Model)
        {
            <tr>
                <td>@emp.Id</td>
                <td>@emp.FirstName</td>
                <td>@emp.LastName</td>
                <td>@emp.Department?.Name</td>
                <td>
                    <a asp-action="Details" asp-route-id="@emp.Id" class="btn btn-outline-secondary btn-sm">Details</a>
                    <a asp-action="Edit" asp-route-id="@emp.Id" class="btn btn-outline-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@emp.Id" class="btn btn-outline-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
