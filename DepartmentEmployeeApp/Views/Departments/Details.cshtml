@model DepartmentEmployeeApp.Models.Department

@{
    ViewData["Title"] = "Department Details";
}

<h2>Department: @Model.Name</h2>

<hr />

<h4>Employees in this Department</h4>

@if (Model.Employees != null && Model.Employees.Count > 0)
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model.Employees)
            {
                <tr>
                    <td>@employee.FirstName</td>
                    <td>@employee.LastName</td>
                    <td>
                        <a class="btn btn-sm btn-dark" asp-controller="Employees" asp-action="Details" asp-route-id="@employee.Id">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No employees in this department.</p>
}
